<div class="container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %>
                <div class="post-style">
                    <div class="post-meta">
                        <%= link_to post.account.username, profile_path(post.account.username), class:"text-dark" %>
                    </div>

                    <div class="actual-post">

                        <%= post.post %>
                    </div>
                    <div class="post-bottom">
                        <i class="fa fa-heart like-<%= post.id %> post-like" data-id="<%=post.id%>"></i>
                        <i class="fa fa-comment post-comment"></i>
                        <strong ><%= post.total_likes %> likes</strong>
                        <p class="text-muted"><%= time_ago_in_words post.created_at %> ago</p>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-4">
                <div class="account-summary">
                    <p><strong><%= current_account.username %></strong><br />
                    <span style="color: #666666;"><%= current_account.full_name %></span></p>
                </div>
                <div class="follower-suggestions">
                    <%= link_to "View All", "#", class:"float-right text-dark"%>
                    <p class="text-muted">Suggestions for you</p>
                    <%= render "accounts/follower_suggestions"%>
                </div>
        </div>
    </div>
</div>