<%= form_for(@post) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_area :post,:cols => "40", :rows => "6", label: "Mumble", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new mumble...", autofocus: true %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-info" %>

<% end %>